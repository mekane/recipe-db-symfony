{% extends 'base.html.twig' %}

{% block title %}Food index{% endblock %}

{% block body %}
    <a href="{{ path('dashboard') }}">Back to Dashboard</a><br>

    <h1>All Ingredients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CostPerServing</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food in foods %}
            <tr>
                <td>{{ food.id }}</td>
                <td>{{ food.name }}</td>
                <td>{{ food.description }}</td>
                <td>{{ food.costPerServing }}</td>
                <td>
                    <a href="{{ path('food_show', {'id': food.id}) }}">show</a>
                    <a href="{{ path('food_edit', {'id': food.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('food_new') }}">Create new</a>
{% endblock %}
